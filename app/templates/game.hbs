{{#cg-toolbar title=model.id subTitle="Städspel" onBack=(route-action "onBack") classNames="cg-toolbar__game" }}
  {{#unless (eq model.state "new")}}
    <div class="cg-toolbar__right-buttons">
      {{#paper-menu as |menu|}}
        {{#menu.trigger}}
          {{#paper-button iconButton=true}}
            {{paper-icon "more_vert"}}
          {{/paper-button}}
        {{/menu.trigger}}

        {{#menu.content width=4 as |content|}}
          {{#content.menu-item onClick=(route-action "goToPrevStatus" model)}}
            {{paper-icon "arrow_back"}}
            <span>Föregående steg</span>
          {{/content.menu-item}}
        {{/menu.content}}
      {{/paper-menu}}
    </div>
  {{/unless}}
{{/cg-toolbar}}

{{#site-content}}
  {{outlet}}
{{/site-content}}
