{{#cg-toolbar title="Städspelet"}}
  {{#if session.isAuthenticated}}
    <div class="menu__current-user">
      {{session.currentUser.name}}

      {{#paper-menu as |menu|}}
        {{#menu.trigger}}
          {{#paper-button iconButton=true}}
            {{paper-icon "more_vert"}}
          {{/paper-button}}
        {{/menu.trigger}}

        {{#menu.content width=4 as |content|}}
          {{#content.menu-item onClick=(route-action "changeName")}}
            {{paper-icon "create"}}
            <span>Ändra namn</span>
          {{/content.menu-item}}

          {{#content.menu-item onClick=(route-action "logout") classNames="menu-item__logout" }}
            <md-icon class="paper-icon md-font material-icons md-default-theme">
              {{fa-icon "sign-out"}}
            </md-icon>
            <span>Logga ut</span>
          {{/content.menu-item}}

        {{/menu.content}}
      {{/paper-menu}}
    </div>
  {{/if}}
{{/cg-toolbar}}

<div class="layout-row layout-xs-column">
  <div class="layout-column flex-xs flex-gt-xs-50">
    <h2 class="page-title">MINA SPEL</h2>

    {{#each model as |userGame|}}
      {{cg-game-card game=userGame.game}}
    {{/each}}
    {{!-- {{cg-game-card title="crazy cow" subtitle="Med Luigi"}} --}}

  </div>
</div>

{{cg-fab-button icon="add" onClick=(route-action "createNewGame")}}
