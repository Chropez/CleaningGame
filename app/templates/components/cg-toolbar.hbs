{{#paper-toolbar as |toolbar|}}
  {{#toolbar.tools}}
    {{#if showBackButton}}
      {{#paper-button iconButton=true onClick=(action onBack)}}
        {{paper-icon "keyboard backspace" }}
      {{/paper-button}}
    {{/if}}

    <h2>{{title}}</h2>

    <span class="flex"></span>

    {{#if session.isAuthenticated}}
      <div class="menu__current-user">
        {{session.currentUser.name}}

        {{#paper-menu as |menu|}}
            {{#menu.trigger}}
              {{#paper-button iconButton=true}}
                {{paper-icon "more_vert"}}
              {{/paper-button}}
            {{/menu.trigger}}

            {{#menu.content width=4 as |content|}}
              {{#content.menu-item onClick=(action "changeName")}}
                {{paper-icon "create"}}
                <span>Ã„ndra namn</span>
              {{/content.menu-item}}

              {{paper-divider}}
                <md-icon class="paper-icon md-font material-icons md-default-theme">
                  {{#content.menu-item onClick=(action "logout") classNames="menu-item__logout"}}
                  {{fa-icon "sign-out"}}
                </md-icon>
                <span>Logga ut</span>
              {{/content.menu-item}}

            {{/menu.content}}
          {{/paper-menu}}
      </div>
      {{/if}}


  {{/toolbar.tools}}
{{/paper-toolbar}}
