{{#paper-list}}
  {{#each game.players as |player|}}
    {{#paper-item}}
      <img src={{player.user.avatar}} alt={{player.user.name}} class="md-avatar">
      <div class="md-list-item-text">
        {{player.user.name}}
      </div>
      <div class="md-list-item-right md-list-item-estimate-status">
        {{#if player.isDoneEstimating}}
          {{paper-icon "done" classNames="status--done"}}
        {{else}}
          Väntar...
        {{/if}}
      </div>
    {{/paper-item}}
  {{/each}}
{{/paper-list}}

{{#paper-button
  primary=true
  disabled=disableNext
  raised=true
  classNames="btn__full-width"
  onClick=(action "next")}}
  Fortsätt
{{/paper-button}}
