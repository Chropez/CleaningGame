{{#paper-card classNames=(if (eq player.user.id playerTurn.user.id) "active") as |card|}}
  {{#card.title}}
    <img src={{player.user.avatar}} alt={{player.user.name}} class="md-avatar">
    <div class="md-list-item-text">
      {{player.user.name}}
    </div>
    {{#if (eq player.user.id playerTurn.user.id)}}
      <div class="md-list-item-right user-turn__status--choosing">
        v채ljer...
      </div>
    {{/if}}
  {{/card.title}}
  {{#card.content}}
    {{paper-divider}}
    <p>
      <strong>St채duppgifter</strong>
    </p>

    {{#each playerTasks as |task|}}
      <div class="layout-row player-task">
        <div class="flex-90">
          {{task.name}}
        </div>
        <div class="flex">
          {{task.averageEstimate}}
        </div>
      </div>

    {{else}}
      <p>
        Har inte valt n책got 채n
      </p>
    {{/each}}

    {{#if (gt playerTasks.length 0)}}
      {{paper-divider}}
      <div class="layout-row">
        <div class="flex-90">
          <strong>Totalt</strong>
        </div>
        <div class="flex">
          {{total}}
        </div>
      </div>
    {{/if}}
  {{/card.content}}
{{/paper-card}}