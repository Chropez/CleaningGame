<h2 class="page-title">VÄLKOMMEN</h2>
{{#paper-card as |card|}}
  {{#card.content}}
    <p>
      Andra spelare kan gå med genom att söka på spelet som heter
      <strong>{{game.id}}</strong>.
      Eller dela spelet genom att
      <a {{action (toggle-action "showShareDialog" this)}}>klicka här</a>.
    </p>

    {{share-game-link
      game=game
      showDialog=showShareDialog
      onClose=(toggle-action "showShareDialog" this)
    }}

    {{player-list players=game.players}}

    {{#if notEnoughPlayers}}
      <p>
        Ni måste vara minst 2 för att spela.
      </p>
    {{/if}}

    {{#paper-button
      primary=true
      raised=true
      disabled=hasTooFewPlayers
      classNames="btn__full-width"
      onClick=(action "startPlaying")
    }}
      Börja spela!
    {{/paper-button}}

  {{/card.content}}

{{/paper-card}}
