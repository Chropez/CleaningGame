{{#cg-toolbar title="Städspelet" tall=true class="toolbar__index"}}
  {{#if session.isAuthenticated}}
    <div class="cg-toolbar__right-buttons">
      {{#paper-button class="btn__search" iconButton=true onClick=(toggle "showJoinDialog" this)}}
        {{paper-icon "search"}}
      {{/paper-button}}

      {{#paper-menu as |menu|}}
        {{#menu.trigger}}
          {{#paper-button iconButton=true}}
            {{paper-icon "more_vert"}}
          {{/paper-button}}
        {{/menu.trigger}}

        {{#menu.content width=4 as |content|}}
          {{#content.menu-item disabled=true onClick=(action "changeName")}}
            {{paper-icon "create"}}
            <span>Ändra namn</span>
          {{/content.menu-item}}

          {{#content.menu-item onClick=(action "logout") classNames="menu-item__logout" }}
            <md-icon class="paper-icon md-font material-icons md-default-theme">
              {{fa-icon "sign-out"}}
            </md-icon>
            <span>Logga ut</span>
          {{/content.menu-item}}

        {{/menu.content}}
      {{/paper-menu}}
    </div>
  {{/if}}

  <div class="welcome-banner">
    <div class="toolbar__text layout-row layout-align-center-end">
      <div class="primary-text">
        {{session.currentUser.name}}
      </div>
    </div>
    <div class="toolbar__avatar layout-row layout-align-center">
      <img src={{session.currentUser.avatar}} alt={{session.currentUser.avatar}} class="">
    </div>
  </div>
{{/cg-toolbar}}

{{#site-content classNames="site-content__index"}}

  <h2 class="page-title">MINA SPEL</h2>

  {{#each userGames as |userGame|}}
    {{cg-game-card game=userGame.game onDelete=(action "onDelete")}}
  {{/each}}

  {{!-- Bottom of page --}}
  {{!--{{cg-fab-button icon="reply" classNames="fab--join" onClick=(toggle "showJoinDialog" this)}}--}}

  {{#if showJoinDialog}}
    {{index/join-game-dialog onJoinGame=(pipe (action "joinGame") (toggle "showJoinDialog" this)) onCloseDialog=(toggle-action "showJoinDialog" this)}}
  {{/if}}
{{/site-content}}

{{cg-fab-button icon="add"  accent=true onClick=(action "createNewGame")}}