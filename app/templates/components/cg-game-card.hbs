{{#paper-card as |card|}}
  {{#link-to 'game' game}}
    {{#card.title as |cardTitle|}}
      {{#cardTitle.text as |text|}}
        {{#text.headline class="animation__game-id"}}{{game.id}}{{/text.headline}}
        {{#text.subhead}}
          {{playersText}}
        {{/text.subhead}}
      {{/cardTitle.text}}
    {{/card.title}}
  {{/link-to}}

  {{#card.actions}}
    {{#paper-button iconButton=true onClick=(toggle-action "showShareDialog" this)}}
      {{paper-icon "share"}}
    {{/paper-button}}
    {{#paper-button iconButton=true onClick=(action onDelete game)}}
      {{paper-icon "delete"}}
    {{/paper-button}}
  {{/card.actions}}
{{/paper-card}}

{{share-game-link
  game=game
  showDialog=showShareDialog
  onClose=(toggle-action "showShareDialog" this)
}}
{{yield}}
